<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ascione.agata">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.progetto.create.CreaProgettoActivity"></activity>
        <activity android:name=".ui.progetto.back_end.crea.CreaBackEndActivity" />
        <activity android:name=".ui.progetto.appunti.AppuntiActivity" />
        <activity android:name=".ui.progetto.list_utenti.ListaUtentiActivity" />
        <activity android:name=".ui.progetto.back_end.BackEndActivity" />
        <activity android:name=".ui.progetto.front_end.crea.CreaFrontEndActivity" />
        <activity android:name=".ui.progetto.front_end.FrontEndActivity" />
        <activity android:name=".ui.progetto.design.DesignActivity" />
        <activity android:name=".ui.progetto.bugs.dettaglio.BugsDettaglioActivity" />
        <activity android:name=".ui.progetto.bugs.BugsActivity" />
        <activity android:name=".ui.progetto.DettaglioProgettoActivity" />
        <activity android:name=".ui.registration.RegistrationActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.image_bigger.ImageActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>